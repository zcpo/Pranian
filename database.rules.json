
{
  "rules": {
    ".read": false,
    ".write": false,
    "posts": {
      ".read": true,
      ".indexOn": ["createdAt", "userId"],
      "$postId": {
        ".write": "auth != null && (data.child('userId').val() === auth.uid || root.child('admins').child(auth.uid).exists())",
        "userId": {
          ".validate": "newData.val() === auth.uid"
        },
        "createdAt": {
          ".validate": "newData.val() <= now"
        }
      }
    },
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "admins": {
      "mcculloughkenya65": {
        ".write": false,
        ".read": true
      },
      "proptheme": {
        ".write": false,
        ".read": true
      }
    }
  }
}
