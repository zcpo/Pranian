
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /feed_items/{document=**} {
      allow read: if true;
    }

    match /feed_items/{itemId} {
      allow write: if request.auth != null && (request.resource.data.userId == request.auth.uid || get(/databases/$(database)/documents/admins/$(request.auth.token.email)) != null);
      allow delete: if get(/databases/$(database)/documents/admins/$(request.auth.token.email)) != null;
    }

    match /users/{userId} {
      allow read: if request.auth.uid == userId;
      allow write: if request.auth.uid == userId;

      match /sessions/{sessionId} {
        allow read, write: if request.auth.uid == userId;
      }

      match /subscriptions/{subscriptionId} {
        allow read, write: if request.auth.uid == userId;
      }
      
      match /following/{followingId} {
        allow read: if true;
        allow write: if request.auth.uid == userId;
      }
      match /followers/{followerId} {
        allow read: if true;
        allow write: if request.auth.uid == followerId;
      }

      match /likes/{likeId} {
        allow read: if request.auth.uid == userId;
        allow write: if request.auth.uid == userId;
      }
    }

    match /content/{contentId} {
      allow read: if true;
    }

    match /contentTypes/{contentTypeId} {
      allow read: if true;
    }

    match /products/{productId} {
      allow read: if true;
    }

    match /productCategories/{productCategoryId} {
      allow read: if true;
    }

    match /subscriptionTiers/{subscriptionTierId} {
      allow read: if true;
    }

    match /admins/{email} {
      allow read: if true;
    }
  }
}
